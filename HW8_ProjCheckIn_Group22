anova(multi_final, mult_interact3, test = "Chisq") # significant with p-value = 0.04122812

## brca1*e2f2
mult_interact4 <- multinom(tumor_stage ~ brca1 + age_at_diagnosis + tp53 + rb1 + e2f1 + brca1*e2f2 + e2f4 + e2f3 + e2f6 + e2f7 + e2f8 + nfkb1 + nfkb2 + hdac1 + taf1, data = age_gene_stage)
anova(multi_final, mult_interact4, test = "Chisq") # does not improve model fit

## brca1*e2f4
mult_interact5 <- multinom(tumor_stage ~ brca1 + age_at_diagnosis + tp53 + rb1 + e2f1 + e2f2 + brca1*e2f4 + e2f3 + e2f6 + e2f7 + e2f8 + nfkb1 + nfkb2 + hdac1 + taf1, data = age_gene_stage)
