anova(multi_final, mult_interact9, test = "Chisq") # does not improve model fit

## brca1*nfkb1
mult_interact10 <- multinom(tumor_stage ~ brca1 + age_at_diagnosis + tp53 + rb1 + e2f1 + e2f2 + e2f4 + e2f3 + e2f6 + e2f7 + e2f8 + brca1*nfkb1 + nfkb2 + hdac1 + taf1, data = age_gene_stage)
anova(multi_final, mult_interact10, test = "Chisq") # does not improve model fit

## brca1*nfkb2
mult_interact11 <- multinom(tumor_stage ~ brca1 + age_at_diagnosis + tp53 + rb1 + e2f1 + e2f2 + e2f4 + e2f3 + e2f6 + e2f7 + e2f8 + nfkb1 + brca1*nfkb2 + hdac1 + taf1, data = age_gene_stage)
